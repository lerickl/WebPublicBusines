  <!DOCTYPE html>
 @{ Layout = "~/Views/Shared/_LayoutUsuario.cshtml";}
<html lang="en">
 

<body id="page-top"  >
    <div class="er_cont_User">
     <div class="container">
      <div class="row">
        <div class="col-lg-12">
               <!-- Begin Page Content -->
                <div class="container-fluid ">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800"> </h1>
                     </div>
                    <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">PRODUCTOS</h1>
                        
                    </div>

                        <!-- Content Row -->
                        <div class="row">
                                @foreach(var products in ViewBag.productos)
                                {
                                     <div class="col-lg-4 mb-4">
                                                <!-- Illustrations -->
                                                <div class="card shadow mb-4">
                                                    <div class="card-header py-3">
                                                        <h6 class="m-0 font-weight-bold text-primary">@products.Nombre</h6>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="text-center">
                                                            <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 300px;height:300px"
                                                                src="@products.ImagenP" alt="...">
                                                        </div>
                                                        <p>Reparación de equipos tecnológicos</p>
                                                        <a target="_blank" rel="nofollow" href="/Usuario/Produc?id=@products.ProductoId">Ver mas &rarr;</a>
                                                    </div>
                                                </div>
                                                
                                            </div>

                                }
                               
                                       
                          </div>                    
                </div>

        </div>
      </div>
    </div>
    </div>
   

</body>

</html>