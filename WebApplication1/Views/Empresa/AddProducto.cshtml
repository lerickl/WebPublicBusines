<!DOCTYPE html>
 @{ Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";}

<body>      
 <div class="">
    <div class="container">
      <div class="row">           
          <div class="  ">
            <div class="er_sombra_Produc">
                <div class="container">
                    <section class="section">
                        <div class="row">
                            <div class="col-md-12 col-xl-12">
                                <div class="row">
                                    <div class="col-md-12  " style="font-weight: bold; color:white ">
                                        <h1>Ingrese Producto</h1>
                                        <hr />
                                    </div>
                                    <form asp-action="addproducto" asp-controller="empresa" method="post" enctype="multipart/form-data" >
                                        <div class="row">
                                                <div class="col-md-4">
                                                <div class="er_card_imgPerfil">
                                                    <row id="preview_imgPerfilProducto">
                                                        <img class="image" id="ImgPerfil1Producto" src="https://png.pngtree.com/png-clipart/20190517/original/pngtree-commodity-icon-commercial-element-iconclothing-iconclothes-iconclothesiconclothinghatcoatshirtskirtshoesofacoatpantssock-png-image_4080072.jpg" />
                                                    </row>
                                                    <label for="imgperfilProducto" class="er_scroll_botAdd"><i class="fas fa-angle-double-up"></i></label>
                                                    <label for="" id="imgperfilDelProducto" class="er_scroll_botDel"><i class="far fa-trash-alt"></i></label>
                                                    <input id="imgperfilProducto"  name="imgperfilProducto" type="file"  />
                                                </div>
                                            </div> 
                                     
                                            <div class="col-md-8">
                                                <div class="row">
                                                    <div class="form1 col-md-4  " >
                                                        <input id="NombreProd"   name="Nombre" type="text"  required>
                                                        <label class="er_lbl-nombre"   for="Nombre">
			                                                <span class="er_text-nomb">Nombre</span>
		                                                </label>  
                                                    </div>
                                                    <div class="form1 col-md-4 ">                                                        
                                                        <input type="text" name="Marca"  required >
		                                                <label class="er_lbl-nombre" data-error="wrong" data-success="right" >
			                                                <span class="er_text-nomb">Marca</span>
		                                                </label> 
                                                    </div>
                                                    <div class="form1 col-md-4">
                                                        <input type="text" name="Descripcion" required>
		                                                <label class="er_lbl-nombre">
			                                                <span class="er_text-nomb">Descripcion</span>
		                                                </label>

                                                    </div>
                                            
                                                    <div class="form1 col-md-4 ">                                                      
                                                        <input type="number" name="Precio"required >
		                                                <label class="er_lbl-nombre">
			                                                <span class="er_text-nomb">Precio</span>
		                                                </label>
                                                
                                                    </div>
                                                     <div class="md-form col-md-4"  >
                                                        <h10 for="categoria" style="color:white" class="font-weight-bold"  >Categoria </h10>
                                                        <select class="combobox form-control" name="categoria" id="categoria">
                                                            <option value="0" id="0" selected="selected">Tipo</option>
                                                             @foreach (var categoria in ViewBag.categoria)
                                                            {
                                                                <option value="@categoria.CategoriaId" id="@categoria.Nombre">@categoria.Nombre</option>
                                                            }
                                                            
                                                        </select>
                                                    </div>
                                           
                                                </div>
                                                <hr />
                                             
                                                <hr />
                                                <div class="row">
                                                    <div class="col-md-6">

                                                        <button style="background:#fff" type="submit" class=" btn blue-gradient btn-rounded waves-effect waves-light">Guardar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>   
      </div>
    </div>
 </div>
</body>
       

